<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout android:background="@color/colorPrimary" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="wrap_content" android:layout_width="0dp" tools:src="@tools:sample/avatars" android:adjustViewBounds="true" app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent" android:id="@+id/iv_main_question_image"/>

    <TextView android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent" android:id="@+id/tv_main_question_title" app:layout_constraintBottom_toTopOf="@id/ll_main_first_row_buttons" android:layout_marginBottom="8dp" android:textSize="18sp" tools:text="How much wood would a wood chuck chuck if a wood chuck could chuck wood?"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintLeft_toLeftOf="parent" android:id="@+id/tv_main_questions_remaining_count" android:textSize="48sp" tools:text="99" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp" android:textStyle="bold"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintTop_toTopOf="@id/tv_main_questions_remaining_count" android:id="@+id/tv_main_questions_remaining" android:text="questions\nremaining" app:layout_constraintBottom_toBottomOf="@id/tv_main_questions_remaining_count" android:layout_marginStart="8dp" app:layout_constraintLeft_toRightOf="@id/tv_main_questions_remaining_count"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintRight_toRightOf="parent" app:layout_constraintTop_toTopOf="@id/tv_main_questions_remaining_count" android:id="@+id/btn_main_submit_answer" android:text="submit" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp" style="@style/Widget.AppCompat.Button.Colored"/>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent" android:id="@+id/ll_main_first_row_buttons" app:layout_constraintBottom_toTopOf="@id/ll_main_second_row_buttons" android:layout_marginBottom="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:orientation="horizontal">

    <Button android:layout_height="wrap_content" android:layout_width="0dp" android:id="@+id/btn_main_answer_0" tools:text="Answer 0" style="@style/Widget.AppCompat.Button.Colored" android:layout_weight="1"/>

    <Button android:layout_height="wrap_content" android:layout_width="0dp" android:id="@+id/btn_main_answer_1" tools:text="Answer 1" style="@style/Widget.AppCompat.Button.Colored" android:layout_weight="1"/>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent" android:id="@+id/ll_main_second_row_buttons" app:layout_constraintBottom_toTopOf="@id/btn_main_submit_answer" android:layout_marginBottom="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:orientation="horizontal">

    <Button android:layout_height="wrap_content" android:layout_width="0dp" android:id="@+id/btn_main_answer_2" tools:text="Answer 2" style="@style/Widget.AppCompat.Button.Colored" android:layout_weight="1"/>

    <Button android:layout_height="wrap_content" android:layout_width="0dp" android:id="@+id/btn_main_answer_3" tools:text="Answer 3" style="@style/Widget.AppCompat.Button.Colored" android:layout_weight="1"/>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>